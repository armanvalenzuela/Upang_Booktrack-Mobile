<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialog" parent="Base.Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@null</item> <!-- Prevents system background -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">90%</item> <!-- Makes it responsive -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>