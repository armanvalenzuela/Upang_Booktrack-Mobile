<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_radius"
    android:padding="24dp"
    android:elevation="8dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="16dp"/>

    <!-- Two-column layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Left Section (Department) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingBottom="8dp"/>

            <RadioGroup
                android:id="@+id/departmentGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton android:id="@+id/department_cea" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CEA" android:fontFamily="@font/poppins_light" android:textStyle="bold"/>
                <RadioButton android:id="@+id/department_cas" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CAS" android:fontFamily="@font/poppins_light" android:textStyle="bold"/>
                <RadioButton android:id="@+id/department_cma" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CMA" android:fontFamily="@font/poppins_light" android:textStyle="bold"/>
                <RadioButton android:id="@+id/department_cahs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CAHS" android:fontFamily="@font/poppins_light" android:textStyle="bold"/>
                <RadioButton android:id="@+id/department_ccje" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CCJE" android:fontFamily="@font/poppins_light" android:textStyle="bold"/>
                <RadioButton android:id="@+id/department_cite" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CITE" android:fontFamily="@font/poppins_light" android:textStyle="bold"/>
                <RadioButton android:id="@+id/department_shs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SHS" android:fontFamily="@font/poppins_light" android:textStyle="bold"/>/>
            </RadioGroup>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginHorizontal="12dp"/>

        <!-- Right Section (Sort by) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Availability Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Availability"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingBottom="4dp"/>

            <!-- Availability Dropdown (Spinner) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="5dp"
                android:layout_margin="10dp">

                <Spinner
                    android:id="@+id/availabilitySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="30dp"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:id="@+id/spinnerDropdownIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_dropdown_v"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>

            <!-- Apply Button -->
            <Button
                android:id="@+id/applyFilterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:fontFamily="@font/poppins_bold"
                android:backgroundTint="@color/green"
                android:textColor="@android:color/white"
                android:layout_marginTop="15dp"/>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>
